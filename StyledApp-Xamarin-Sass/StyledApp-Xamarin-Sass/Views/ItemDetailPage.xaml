<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StyledApp_Xamarin_Sass.Views.ItemDetailPage"
             Title="{Binding Title}">
    <ContentPage.Resources>
        <StyleSheet Source="..\Styles\itemDetailPage.css"/>
    </ContentPage.Resources>
    <StackLayout>
        <Label Text="Text:"/>
        <Label Text="{Binding Item.Text}" StyleId="importantLabel"/>
        <Label Text="Description:"/>
        <Label Text="{Binding Item.Description}" StyleId="sharedLabel"/>
    </StackLayout>
</ContentPage>